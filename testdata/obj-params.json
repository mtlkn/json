{
    "query": {
        "bool": {
            "must": {
                "query_string": {
                    "query": "${query}",
                    "fields": [
                        "headline",
                        "title",
                        "summary"
                    ]
                }
            },
            "filter": [
                {
                    "term": {
                        "type": "text"
                    }
                },
                {
                    "term": {
                        "flag": "${flag}"
                    }
                }
            ]
        }
    },
    "_source": "${source}",
    "size": "${size}",
    "from": "${from}",
    "sort": "${sort}"
}